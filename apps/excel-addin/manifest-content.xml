<?xml version="1.0" encoding="UTF-8"?>
<!--
  VariScout Content Add-in Manifest

  This manifest defines the Content Add-in that embeds charts in the worksheet.
  The Content Add-in is inserted via the Task Pane setup wizard.

  Note: Content Add-ins are placed within a worksheet cell area and can
  interact with the workbook data via Office.js APIs.
-->
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="ContentApp">

  <!-- Begin Basic Settings -->
  <Id>b2c3d4e5-f6a7-8901-bcde-f23456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>VariScout</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="VariScout Charts" />
  <Description DefaultValue="Interactive statistical charts embedded in your worksheet. I-Chart, Boxplot, and real-time statistics that update with Excel slicer selections."/>
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://variscout.com/support"/>
  <!-- End Basic Settings -->

  <!-- Domains that will be allowed when navigating -->
  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
  </AppDomains>

  <!-- Begin Content Mode integration -->
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="ExcelApi" MinVersion="1.9"/>
    </Sets>
  </Requirements>

  <!-- Default size for the Content Add-in (in pixels) -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3000/content.html"/>
    <RequestedWidth>800</RequestedWidth>
    <RequestedHeight>300</RequestedHeight>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

</OfficeApp>
