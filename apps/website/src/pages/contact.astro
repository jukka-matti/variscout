	<section class="py-24 bg-white">
		<div class="container-wide text-center max-w-2xl mx-auto">
			<div class="p-4 bg-brand-primary/10 rounded-2xl inline-block mb-8">
				<Mail size={48} class="text-brand-primary" />
			</div>
			<h1 class="text-4xl font-bold mb-6">Contact Us</h1>
			<p class="text-neutral-600 text-lg mb-10">
				Have questions about VaRiScout? We'd love to hear from you.
			</p>
			<div class="bg-neutral-50 rounded-2xl p-8 border border-neutral-200">
				<p class="text-neutral-700 mb-2 font-medium">Email us at</p>
				<a href="mailto:hello@variscout.com" class="text-brand-primary text-xl font-bold hover:underline">
					hello@variscout.com
				</a>
				<p class="text-sm text-neutral-500 mt-4">
