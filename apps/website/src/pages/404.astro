---
import BaseLayout from "../layouts/BaseLayout.astro";
import { MoveLeft, HelpCircle } from "lucide-astro";
---

<BaseLayout title="Page Not Found | VaRiScout">
	<section class="flex-1 flex items-center justify-center py-20">
		<div class="container-wide text-center">
			<div class="inline-flex p-6 bg-neutral-100 rounded-full text-neutral-400 mb-8">
				<HelpCircle size={64} />
			</div>
			<h1 class="text-6xl font-black text-neutral-900 mb-4">404</h1>
			<h2 class="text-2xl font-bold mb-6">Oops! This page went missing.</h2>
			<p class="text-neutral-500 max-w-md mx-auto mb-10 italic_text_shorthand">
				We couldn't find the page you're looking for. It might have been moved or the URL might be incorrect.
			</p>
			<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
				<a href="/" class="btn btn-primary px-8">
					<MoveLeft size={18} class="mr-2" /> Back to Home
				</a>
				<a href="/app" class="btn btn-secondary px-8">
					Try the App
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
