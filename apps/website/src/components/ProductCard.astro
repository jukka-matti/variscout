---
interface Props {
	id: string;
	title: string;
	description: string;
	price: string;
	cta: { text: string; href: string };
	badge?: string;
}

const { title, description, price, cta, badge } = Astro.props;
---

<div class="bg-white border border-neutral-200 rounded-2xl p-8 flex flex-col hover:border-brand-primary/50 transition-colors">
	{badge && <span class="inline-block text-xs font-semibold text-brand-primary bg-brand-primary/10 px-3 py-1 rounded-full mb-3">{badge}</span>}
	<h3 class="text-xl font-bold mb-2">{title}</h3>
	<p class="text-neutral-600 text-sm mb-6 flex-1">
		{description}
	</p>
	<div class="mb-6">
		<span class="text-sm text-neutral-500 block mb-1">Starting at</span>
		<span class="text-2xl font-bold text-neutral-900">{price}</span>
	</div>
	<a 
		href={cta.href} 
		class={`btn ${title === 'Web App' ? 'btn-primary' : 'btn-secondary'} w-full`}
	>
		{cta.text}
	</a>
</div>
