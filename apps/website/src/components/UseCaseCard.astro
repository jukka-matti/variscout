---
import { ArrowRight, Check } from "lucide-astro";

interface Props {
	id: string;
	title: string;
	description: string;
	bullets: string[];
	cta: { text: string; href: string };
}

const { title, description, bullets, cta } = Astro.props;
---

<div class="bg-white border border-neutral-200 rounded-2xl overflow-hidden hover:shadow-xl transition-all flex flex-col h-full group">
	<div class="p-8 flex-1">
		<h3 class="text-2xl font-bold mb-4">{title}</h3>
		<p class="text-neutral-600 mb-6 leading-relaxed">
			{description}
		</p>
		<ul class="space-y-3 mb-8">
			{bullets.map((bullet) => (
				<li class="flex items-start gap-3 text-sm text-neutral-700">
					<div class="mt-0.5 p-0.5 bg-brand-primary/10 rounded-full text-brand-primary">
						<Check size={14} />
					</div>
					<span>{bullet}</span>
				</li>
			))}
		</ul>
	</div>
	<div class="p-8 pt-0 mt-auto">
		<a href={cta.href} class="flex items-center gap-2 text-brand-primary font-semibold hover:gap-3 transition-all">
			{cta.text}
			<ArrowRight size={18} />
		</a>
	</div>
</div>
