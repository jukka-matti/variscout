---
interface Props {
	headline: string;
	description: string;
	misleadingMetric: string;
	reality: string;
}

const { headline, description, misleadingMetric, reality } = Astro.props;
---

<section class="py-16 bg-white border-b border-neutral-100">
	<div class="container-wide">
		<div class="max-w-3xl">
			<h2 class="text-sm font-bold text-neutral-400 uppercase tracking-wider mb-6">The Problem</h2>
			<p class="text-2xl md:text-3xl font-bold text-neutral-900 mb-6">{headline}</p>
			<p class="text-lg text-neutral-600 leading-relaxed mb-8">{description}</p>

			<div class="grid md:grid-cols-2 gap-6">
				<div class="p-6 bg-red-50 border border-red-200/50 rounded-xl">
					<div class="text-xs font-bold text-red-500 uppercase tracking-wider mb-2">What the dashboard shows</div>
					<p class="text-neutral-700 font-medium">{misleadingMetric}</p>
				</div>
				<div class="p-6 bg-green-50 border border-green-200/50 rounded-xl">
					<div class="text-xs font-bold text-green-600 uppercase tracking-wider mb-2">What the data reveals</div>
					<p class="text-neutral-700 font-medium">{reality}</p>
				</div>
			</div>
		</div>
	</div>
</section>
